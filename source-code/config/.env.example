# JARVIS Configuration
# Copy this file to .env and fill in your values

# OpenAI API Key for TTS (required for voice responses)
OPENAI_API_KEY=your-openai-api-key-here

# Ollama Configuration (for conversation improvement)
OLLAMA_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=qwen2.5:3b-instruct

# Feature Flags
ENABLE_MICROPHONE=true
ENABLE_MODEL=true
ENABLE_VAD=true
ENABLE_AI_DETECTION=false
ENABLE_TRANSCRIPTION=true

# Audio Configuration
SAMPLE_RATE=16000
CHUNK_SIZE=1600
DEVICE_SAMPLE_RATE=48000

# Voice Activity Detection
SILENCE_THRESHOLD=10
MIN_SPEECH_RATIO=0.0001

# Paths
LOG_FILE=chat.txt
IMPROVED_LOG_FILE=chat-revised.txt
TRIGGER_FILE=/tmp/jarvis-type-trigger
KEYBOARD_EVENT_FILE=/tmp/jarvis-keyboard-events
BOOST_WORDS_FILE=boost_words.txt

# AI Detection
DETECTION_COOLDOWN=5
BUFFER_DURATION=300

# Debug
DEBUG_MODE=false

# Monitoring (optional)
ENABLE_METRICS=false
METRICS_PORT=9090
