# JARVIS Configuration with PipeWire Echo Cancellation
# Copy this to .env to use echo-canceled audio

# Echo cancellation (handled by PipeWire now)
ENABLE_AEC=false

# Audio device - use "Echo Canceled Microphone" from PipeWire
# Set this as your default input device in system settings
# Or uncomment and set device index:
# AUDIO_DEVICE_INDEX=24

# Other settings
ENABLE_SPEAKER_RECOGNITION=false
WAKE_WORD=jarvis
ENABLE_CHAT_MODE=true
